<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.gary.food_truck.MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="124dp"
        app:srcCompat="@drawable/truck" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/radioButton3"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="22dp"
        android:text="@string/tv_seleccionarpedido"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="50dp" />

    <RadioButton
        android:id="@+id/radioButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rb_sandwich"
        tools:layout_editor_absoluteY="236dp"
        tools:layout_editor_absoluteX="58dp"
        android:layout_above="@+id/radioButton"
        android:layout_alignStart="@+id/radioButton"
        android:layout_marginBottom="16dp" />

    <RadioButton
        android:id="@+id/radioButton3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rb_salchipapa"
        tools:layout_editor_absoluteY="316dp"
        tools:layout_editor_absoluteX="58dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <RadioButton
        android:id="@+id/radioButton4"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="@string/rb_pizza" />

    <RadioButton
        android:id="@+id/radioButton5"
        android:layout_width="133dp"
        android:layout_height="wrap_content"
        android:text="@string/rb_bebida" />

    <RadioButton
        android:id="@+id/radioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="153dp"
        android:text="@string/rb_hotdog"
        tools:layout_editor_absoluteX="58dp"
        tools:layout_editor_absoluteY="160dp" />

</LinearLayout>
